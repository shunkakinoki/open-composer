{
  "name": "open-composer",
  "version": "0.8.8",
  "repository": "https://github.com/shunkakinoki/open-composer",
  "license": "MIT",
  "author": "Shun Kakinoki",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "bin": {
    "oc": "./src/index.ts",
    "open-composer": "./src/index.ts",
    "opencomposer": "./src/index.ts"
  },
  "files": [
    "src/**/*",
    "bin/**/*",
    "scripts/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun run scripts/generate-version.ts && bun build ./src/index.ts --outdir ./dist --target=bun",
    "dev": "bun run ./src/index.ts",
    "prepublishOnly": "bun run scripts/prepublish.ts",
    "publish": "bun run prepublishOnly",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:update-snapshot": "bun test --updateSnapshot",
    "test:watch": "bun test --watch",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@effect/cli": "^0.71.0",
    "@effect/platform": "^0.92.1",
    "@effect/platform-bun": "^0.81.1",
    "@effect/printer": "^0.46.0",
    "@effect/printer-ansi": "^0.46.0",
    "@open-composer/agent-router": "workspace:*",
    "@open-composer/cache": "workspace:*",
    "@open-composer/config": "workspace:*",
    "@open-composer/db": "workspace:*",
    "@open-composer/gh": "workspace:*",
    "@open-composer/gh-pr": "workspace:*",
    "@open-composer/git": "workspace:*",
    "@open-composer/git-releases": "workspace:*",
    "@open-composer/git-stack": "workspace:*",
    "@open-composer/git-worktrees": "workspace:*",
    "@open-composer/process-runner": "workspace:*",
    "@open-composer/tmux": "workspace:*",
    "bun-pty": "^0.3.2",
    "effect": "^3.18.2",
    "ink": "^6.3.1",
    "posthog-node": "^5.9.2",
    "react": "^19.2.0",
    "react-devtools-core": "^6.1.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.23",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
