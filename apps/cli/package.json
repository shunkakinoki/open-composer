{
  "name": "open-composer",
  "version": "0.8.21",
  "repository": "https://github.com/shunkakinoki/open-composer",
  "license": "MIT",
  "author": "Shun Kakinoki",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "bin": {
    "oc": "./src/index.ts",
    "open-composer": "./src/index.ts",
    "opencomposer": "./src/index.ts"
  },
  "files": [
    "src/**/*",
    "bin/**/*",
    "scripts/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node",
    "build:generate": "bun run scripts/generate-version.ts",
    "dev": "bun run ./src/index.ts",
    "prepublishOnly": "bun run scripts/prepublish.ts",
    "publish": "bun run prepublishOnly",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:update-snapshot": "bun test --updateSnapshot",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@effect/cli": "^0.71.0",
    "@effect/platform": "^0.92.1",
    "@effect/platform-bun": "^0.81.1",
    "@effect/printer": "^0.46.0",
    "@effect/printer-ansi": "^0.46.0",
    "@open-composer/agent-registry": "workspace:*",
    "@open-composer/agent-router": "workspace:*",
    "@open-composer/agent-sessions": "workspace:*",
    "@open-composer/analytics": "workspace:*",
    "@open-composer/cache": "workspace:*",
    "@open-composer/config": "workspace:*",
    "@open-composer/db": "workspace:*",
    "@open-composer/feedback": "workspace:*",
    "@open-composer/gh-pr": "workspace:*",
    "@open-composer/git": "workspace:*",
    "@open-composer/git-releases": "workspace:*",
    "@open-composer/git-stack": "workspace:*",
    "@open-composer/git-worktrees": "workspace:*",
    "@open-composer/orchestrator": "workspace:*",
    "@open-composer/process-runner": "workspace:*",
    "@open-composer/server": "workspace:*",
    "drizzle-orm": "^0.44.6",
    "effect": "^3.18.4",
    "ink": "^6.3.1",
    "ink-text-input": "^6.0.0",
    "inquirer": "^12.9.6",
    "posthog-node": "^5.9.5",
    "react": "^19.2.0",
    "react-devtools-core": "^7.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/ws": "^8.18.1",
    "@xterm/addon-attach": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "typescript": "^5.9.3",
    "ws": "^8.18.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
