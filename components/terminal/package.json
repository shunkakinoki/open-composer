{
  "name": "@open-composer/terminal",
  "version": "0.1.1",
  "repository": "https://github.com/shunkakinoki/open-composer",
  "license": "MIT",
  "author": "Shun Kakinoki",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node",
    "dev": "bun run ./src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:update-snapshot": "bun test --updateSnapshot",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@xterm/headless": "^5.5.0",
    "bun-pty-rust": "^0.3.10",
    "effect": "^3.18.4",
    "ink": "^6.3.1",
    "react": "^19.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.2",
    "ink-testing-library": "^4.0.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
