{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["tests/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "prepublishOnly": {
      "dependsOn": ["^build", "^prepublishOnly"]
    },
    "__all__": {
      "dependsOn": [
        "build",
        "type-check",
        "test",
        "//#__format__",
        "//#__check__",
        "//#__lint__"
      ]
    },
    "//#__lint__": {
      "dependsOn": ["//#__check__"]
    },
    "//#__format__": {
      "dependsOn": ["//#__fix__"]
    },
    "//#__check__": {
      "dependsOn": [
        "^type-check",
        "//#biome:check:check",
        "//#biome:format:check"
      ]
    },
    "//#__fix__": {
      "dependsOn": ["//#biome:check:fix", "//#biome:format:fix"]
    },
    "//#biome:check:check": {
      "cache": false
    },
    "//#biome:check:fix": {
      "cache": false
    },
    "//#biome:format:check": {
      "cache": false
    },
    "//#biome:format:fix": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_BRANCH_URL",
    "VERCEL_REGION",
    "VERCEL_DEPLOYMENT_ID"
  ]
}
