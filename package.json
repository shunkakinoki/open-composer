{
  "name": "@shunkakinoki/open-composer",
  "private": false,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:microfrontends": "microfrontends proxy --local-apps landing,docs",
    "fix": "turbo run __fix__",
    "test": "turbo run test",
    "prepublishOnly": "turbo run prepublishOnly",
    "publish": "turbo run prepublishOnly && changeset publish --tag ${TAG}",
    "version": "changeset version",
    "version:snapshot": "changeset version --snapshot",
    "changeset:status": "changeset status --verbose --since origin/main",
    "check": "turbo run __check__",
    "check:check": "biome check .",
    "check:fix": "biome check --write --unsafe .",
    "format": "turbo run __format__",
    "format:check": "biome format --check .",
    "format:fix": "biome format --write .",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo type-check"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@changesets/cli": "^2.29.7",
    "lefthook": "^1.13.4",
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.0.0"
}
