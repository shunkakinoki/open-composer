{
  "name": "@shunkakinoki/open-composer",
  "version": "0.1.0",
  "private": false,
  "repository": "https://github.com/shunkakinoki/open-composer",
  "license": "MIT",
  "author": "Shun Kakinoki",
  "main": "./index.js",
  "module": "./index.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "workspaces": [
    "apps/*",
    "agents/*",
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "all": "turbo run __all__",
    "biome:check:check": "biome check .",
    "biome:check:fix": "biome check --write --unsafe .",
    "biome:format:check": "biome format --error-on-warnings .",
    "biome:format:fix": "biome format --write .",
    "build": "turbo run build",
    "bun:upgrade": "bun upgrade && VERSION=$(bun --version) && sed -i '' \"s/\\\"packageManager\\\": \\\"bun@[^\\\"]*\\\"/\\\"packageManager\\\": \\\"bun@$VERSION\\\"/\" package.json",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --verbose --since origin/main",
    "changeset:version": "changeset version",
    "check": "turbo run __check__",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "dev:microfrontends": "microfrontends proxy --local-apps landing,docs",
    "fix": "turbo run __fix__",
    "format": "turbo run __format__",
    "knip:check": "knip --no-config-hints",
    "knip:fix": "knip --no-config-hints --fix --fix-type exports,types,dependencies",
    "lint": "turbo run __lint__",
    "ncu:upgrade": "bun run npm-check-updates:upgrade",
    "npm-check-updates:check": "npm-check-updates --workspaces",
    "npm-check-updates:upgrade": "npm-check-updates --workspaces --upgrade",
    "npm-package-json:check": "npmPkgJsonLint . --quiet",
    "npm-package-json:fix": "npmPkgJsonLint .",
    "prepublishOnly": "turbo run prepublishOnly",
    "publish": "turbo run prepublishOnly && bun run changeset:publish",
    "sort-package-json:check": "sort-package-json package.json */*/package.json --check",
    "sort-package-json:fix": "sort-package-json package.json */*/package.json",
    "test": "turbo run test",
    "test:coverage": "turbo run test -- --coverage",
    "test:update": "turbo run test -- --update-snapshots",
    "type-check": "turbo run type-check",
    "upgrade": "turbo run __upgrade__",
    "version": "bun run changeset:version"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@effect/language-service": "^0.44.0",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.1",
    "knip": "^5.64.3",
    "lefthook": "^1.13.6",
    "npm-check-updates": "^19.0.0",
    "npm-package-json-lint": "^9.0.0",
    "sort-package-json": "^3.4.0",
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.3.0",
  "publishConfig": {
    "access": "public"
  },
  "patchedDependencies": {
    "@opentui/react@0.1.26": "patches/@opentui%2Freact@0.1.26.patch"
  }
}
