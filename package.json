    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "lefthook": "^1.13.1",
    "turbo": "^2.5.6"
  },
  "packageManager": "bun@1.0.0"
}
