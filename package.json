{
  "name": "@shunkakinoki/open-composer",
  "private": false,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "test": "turbo test",
    "check": "biome check .",
    "format": "biome format --write .",
    "clean": "turbo clean && rm -rf node_modules",
