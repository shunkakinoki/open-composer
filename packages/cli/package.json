{
  "name": "open-composer",
  "version": "0.1.2",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.ts",
  "bin": {
    "open-composer": "./src/index.ts",
    "oc": "./src/index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node",
    "dev": "bun run ./src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:update-snapshot": "bun test --updateSnapshot"
  },
  "dependencies": {
    "@effect/cli": "^0.69.0",
    "@effect/platform": "^0.91.1",
    "@effect/platform-bun": "^0.80.0",
    "@effect/printer": "^0.45.0",
    "@effect/printer-ansi": "^0.45.0",
    "@open-composer/agent-router": "workspace:*",
    "@open-composer/git-worktrees": "workspace:*",
    "effect": "^3.17.14",
    "ink": "^6.3.1",
    "react": "^19.1.1",
    "react-devtools-core": "^6.1.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.1.0",
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "typescript": "^5.9.2"
  }
}
