{
  "name": "@open-composer/agent-router",
  "version": "0.2.1",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.ts",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node",
    "dev": "bun run ./src/index.ts",
    "type-check": "tsc -b tsconfig.json",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:update-snapshot": "bun test --updateSnapshot"
  },
  "dependencies": {
    "@open-composer/agent-claude-code": "workspace:*",
    "@open-composer/agent-codex": "workspace:*",
    "@open-composer/agent-opencode": "workspace:*",
    "@open-composer/agent-types": "workspace:*",
    "@open-composer/cache": "workspace:*",
    "effect": "^3.18.0"
  },
  "devDependencies": {
    "@effect/language-service": "^0.41.1",
    "@types/bun": "^1.2.23",
    "@types/node": "^24.6.0",
    "typescript": "^5.9.2"
  }
}
