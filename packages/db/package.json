{
  "name": "@open-composer/db",
  "version": "0.4.0",
  "repository": "https://github.com/shunkakinoki/open-composer",
  "license": "MIT",
  "author": "Shun Kakinoki",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "migrations/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target=node",
    "dev": "bun run ./src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:update-snapshot": "bun test --updateSnapshot",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@effect/platform-bun": "^0.81.1",
    "@effect/sql": "^0.46.0",
    "@effect/sql-drizzle": "^0.45.0",
    "@effect/sql-sqlite-bun": "^0.47.0",
    "drizzle-orm": "^0.44.6",
    "effect": "^3.18.4"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/node": "^24.7.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
